{
  "name": "chainhop-contracts",
  "version": "0.1.0",
  "description": "ChainHop Contracts",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "generate:typechain": "rm -rf typechain && hardhat typechain",
    "report-gas:summary": "REPORT_GAS=true hardhat test",
    "report-gas:benchmark": "yarn report-gas:benchmark:swap && yarn report-gas:benchmark:noswap",
    "report-gas:benchmark:swap": "REPORT_GAS=true BENCHMARK=swap hardhat test benchmark/swap.ts",
    "report-gas:benchmark:noswap": "REPORT_GAS=true BENCHMARK=noswap hardhat test benchmark/noswap.ts",
    "size-contracts": "hardhat size-contracts | sed -r 's/[[:cntrl:]]\\[[0-9]{1,3}m//g' > reports/contract_sizes.txt",
    "test": "hardhat test",
    "deploy": "hardhat deploy --tags TransferSwapper --network",
    "build-docker": "docker build -t ghcr.io/celer-network/chainhop-mainnet-fork:latest .",
    "push-docker": "docker push ghcr.io/celer-network/chainhop-mainnet-fork:latest"
  },
  "license": "GPL-3.0",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.2.0",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "chai": "^4.3.6",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "fs-extra": "^10.0.1",
    "hardhat": "^2.9.0",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-deploy": "^0.10.5",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "protobufjs": "^6.11.2",
    "solc": "0.8.12",
    "ts-node": "^10.6.0",
    "typechain": "^7.0.0",
    "typescript": "^4.6.2",
    "toml": "^3.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  }
}
